---
export interface Props {
  title: string;
  subtitle: string;
}

const { title, subtitle } = Astro.props;
---

<section class="bg-heading-pattern bg-cover bg-no-repeat bg-blend-multiply">
  <div
    class="container text-center py-4 md:p-4 flex flex-col justify-center h-40 md:h-[200px] text-shadow-sm"
  >
    <h1 class="text-xl sm:text-5xl tracking-tight text-white">
      <span class="block">{title}</span>
    </h1>
    <h2
      class="text-subtitle mt-0 pt-2 text-white md:mt-3 text-md lg:text-2xl lg:mx-0 italic"
    >
      <span class="block">{subtitle}</span>
    </h2>
  </div>
</section>

<style>
  @tailwind base;

  .text-shadow-sm {
    text-shadow: 0px 5px 30px black;
  }
  .text-subtitle {
    font-family: Open Sans, Helvetica Neue, Helvetica, Roboto, Arial, sans-serif;
  }
</style>
