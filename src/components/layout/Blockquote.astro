---
export interface Props {
  author?: string;
}
const { author } = Astro.props;
---

<blockquote class="p-4 my-4 bg-gray-50 border-l-4 border-gray-300">
  <p class="text-2xl font-semibold leading-relaxed text-gray-900">
    <slot />
  </p>
  {
    author && (
      <cite class="before:block before:bg-stone-400 before:h-0.5 before:my-2 before:w-12 before:leading-none text-xl font-medium leading-relaxed text-gray-900">
        {author}
      </cite>
    )
  }
</blockquote>
