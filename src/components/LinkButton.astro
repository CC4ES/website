---
export interface Props {
  href: string;
}

const { href } = Astro.props;
---

<a
  href={href}
  class="inline-flex justify-center py-2 px-3 text-lg font-medium text-center text-white bg-green-600 rounded-lg hover:bg-green-700 focus:ring-4 focus:outline-none focus:ring-blue-300"
  ><slot />
</a>
